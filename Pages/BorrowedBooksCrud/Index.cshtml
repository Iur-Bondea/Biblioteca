@page
@model Biblioteca.Pages.BorrowedBooksCrud.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>BorrowedBooks List:</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BorrowedBooks[0].Person.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BorrowedBooks[0].Person.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BorrowedBooks[0].Employee.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BorrowedBooks[0].Employee.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BorrowedBooks[0].Book.Title)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.BorrowedBooks[0].BorrowedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BorrowedBooks[0].ReturnDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BorrowedBooks[0].BookReturned)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BorrowedBooks[0].Reviews)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.BorrowedBooks) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Person.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Person.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Book.Title)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.BorrowedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReturnDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookReturned)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reviews)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
